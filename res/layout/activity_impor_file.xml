<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/activity_main_titieLLid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/activity_main_titlebkg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_main_titleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="导入配置文件"
            android:textColor="@android:color/white"
            android:textSize="23dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <EditText
            android:id="@+id/import_file_content_EdtId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ems="10"
            android:hint="请将配置文件内容复制进输入框"
            android:paddingTop="200dp"
            android:scrollHorizontally="true" >
            <requestFocus />
        </EditText>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        android:orientation="vertical">

        <Button
            android:id="@+id/import_BtnId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_alibuybutton"
            android:text="导入文件" />
    </LinearLayout>

</LinearLayout>